<div class="container">
 <div class="row">
  <div class='col-md-3'>
    <h2>User info</h2>
    <%= image_tag @user.get_profile_image(100,100) %>
    <table class='table'>
    <tbody>
     <tr>
      <th>name</th>
      <th><%= @user.name %></th>
     </tr>
     <tr>
    <th>introduction</th>
    <th></th>
    </tr>
    </tbody>
    </table>
   <div class='row'>
    <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" do %>
    <li class="fas fa-user-cog"></li>
    <%end%>
   </div>
    <h2 class="mt-3">New book</h2>
    <%= form_with model: @book do |f| %>
     <h4>Title</h4>
     <%= f.text_field :title %>
     <h4>Opinion</h4>
     <%= f.text_area :body %>

    <%= f.submit 'Create Book',class: 'btn btn-success' %>

    <% end %>


  </div>

  <div class='col-md-8 offset-md-1'>
    <h2>Books</h2>
      <table class='table table-hover table-inverse'>
        <thead>
         <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
         <th colspan="3"></th>
         </tr>
        </thead>
       <tbody>
        <% @books.each do |book| %>
        <td><%= image_tag book.user.get_profile_image(100,100) %></td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
       </tbody>
       <% end %>
      </table>
 </div>
</div>
